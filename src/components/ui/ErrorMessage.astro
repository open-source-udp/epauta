---
/**
 * Componente de mensaje de error para páginas Astro
 * Muestra un mensaje de error amigable al usuario
 */

interface Props {
  title?: string;
  message?: string;
  showRetry?: boolean;
  class?: string;
}

const {
  title = 'Error al cargar los recursos',
  message = 'No se pudieron cargar los archivos. Por favor, intenta de nuevo más tarde.',
  showRetry = false,
  class: className = '',
} = Astro.props;
---

<div class={`my-4 ${className}`}>
  <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded" role="alert">
    <div class="flex items-start">
      <div class="flex-shrink-0">
        <svg
          class="h-5 w-5 text-red-400"
          viewBox="0 0 20 20"
          fill="currentColor"
          aria-hidden="true"
        >
          <path
            fill-rule="evenodd"
            d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
            clip-rule="evenodd"
          />
        </svg>
      </div>
      <div class="ml-3 flex-1">
        <h3 class="text-sm font-semibold text-red-800">
          {title}
        </h3>
        <p class="text-sm text-red-700 mt-1">
          {message}
        </p>
        {showRetry && (
          <button
            onclick="window.location.reload()"
            class="mt-3 text-sm font-medium text-red-800 hover:text-red-900 underline focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 rounded"
          >
            Reintentar
          </button>
        )}
        <slot />
      </div>
    </div>
  </div>
</div>
