---
/**
 * Página dinámica para cursos de EII
 * Usa el componente reutilizable CareerCoursePage
 */

import CareerCoursePage from '@/components/CareerCoursePage.astro'
import eii from '@/data/eii/ramos.json'

export async function getStaticPaths() {
  return eii.map(({ codigo, nombre }) => ({
    params: { codigo },
    props: { nombre },
  }))
}

const { codigo } = Astro.params
const { nombre } = Astro.props
---

<CareerCoursePage carrera="eii" codigo={codigo} nombre={nombre} />
