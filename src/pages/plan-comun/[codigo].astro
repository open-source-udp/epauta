---
/**
 * Página dinámica para cursos de Plan Común
 * Usa el componente reutilizable CareerCoursePage
 */

import CareerCoursePage from "@/components/CareerCoursePage.astro";
import planComun from "@/data/plan-comun/ramos.json";

export async function getStaticPaths() {
  return planComun.map(({ codigo, nombre }) => ({
    params: { codigo },
    props: { nombre },
  }));
}

const { codigo } = Astro.params;
const { nombre } = Astro.props;
---

<CareerCoursePage carrera="plan-comun" codigo={codigo} nombre={nombre} />
