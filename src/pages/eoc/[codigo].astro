---
/**
 * Página dinámica para cursos de EOC
 * Usa el componente reutilizable CareerCoursePage
 */

import CareerCoursePage from '@/components/CareerCoursePage.astro'
import eoc from '@/data/eoc/ramos.json'

export async function getStaticPaths() {
  return eoc.map(({ codigo, nombre }) => ({
    params: { codigo },
    props: { nombre },
  }))
}

const { codigo } = Astro.params
const { nombre } = Astro.props
---

<CareerCoursePage carrera="eoc" codigo={codigo} nombre={nombre} />
